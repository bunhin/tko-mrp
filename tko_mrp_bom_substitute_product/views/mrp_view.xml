                                    <field name="product_id" readonly="1"/>
                                    <field name="substitute_product_id" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="available_qty" readonly="1"/>
                                    <!-- <field name="uom_id" readonly="1"/> -->
                                    <field name="state" readonly="1"/>
